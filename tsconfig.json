{
  "compilerOptions": {
    "baseUrl": ".",             // <-- ini wajib ditambahkan
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["resources/js/*"],   // hapus "./" di depan supaya sesuai dengan baseUrl "."
      "ziggy-js": ["vendor/tightenco/ziggy"]
    }
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.d.ts"
  ]
}
